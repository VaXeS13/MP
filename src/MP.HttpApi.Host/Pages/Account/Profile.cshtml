@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Volo.Abp.Account.Localization
@using Volo.Abp.MultiTenancy
@using Volo.Abp.Localization
@model MP.HttpApi.Host.Pages.Account.ProfileModel
@inject IHtmlLocalizer<AccountResource> L
@inject ICurrentTenant CurrentTenant
@inject IOptions<AbpLocalizationOptions> LocalizationOptions
@{
    Layout = null;
    var tenantName = CurrentTenant.IsAvailable ? CurrentTenant.Name : "MP";
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var languages = LocalizationOptions.Value.Languages;
}

@functions {
    string GetLanguageFlag(string cultureName)
    {
        return cultureName.ToLower() switch
        {
            "en" or "en-gb" => "🇬🇧",
            "zh-hans" => "🇨🇳",
            "es" => "🇪🇸",
            "ar" => "🇸🇦",
            "hi" => "🇮🇳",
            "pt-br" => "🇧🇷",
            "fr" => "🇫🇷",
            "ru" => "🇷🇺",
            "de-de" => "🇩🇪",
            "tr" => "🇹🇷",
            "it" => "🇮🇹",
            "cs" => "🇨🇿",
            "hu" => "🇭🇺",
            "ro-ro" => "🇷🇴",
            "sv" => "🇸🇪",
            "fi" => "🇫🇮",
            "sk" => "🇸🇰",
            "is" => "🇮🇸",
            "zh-hant" => "🇹🇼",
            "pl-pl" => "🇵🇱",
            _ => "🌐"
        };
    }
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mój Profil - @tenantName</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/account-styles.css">
</head>
<body>
    <div class="account-page-container">
        <!-- Language Selector -->
        <div class="language-selector">
            <form method="get" asp-page="/Account/Profile">
                <input type="hidden" name="culture" value="@currentCulture" />
                <select name="culture" class="language-dropdown" onchange="this.form.submit()">
                    @foreach (var language in languages)
                    {
                        var isSelected = currentCulture.Equals(language.CultureName, StringComparison.OrdinalIgnoreCase) ||
                                        currentCulture.StartsWith(language.CultureName.Split('-')[0], StringComparison.OrdinalIgnoreCase);
                        <option value="@language.CultureName" selected="@isSelected">@GetLanguageFlag(language.CultureName) @language.DisplayName</option>
                    }
                </select>
            </form>
        </div>

        <div class="account-card">
            <!-- Header -->
            <div class="account-card-header">
                <div class="tenant-name">
                    <i class="fas fa-store"></i> @tenantName
                </div>
                <h1>Mój Profil</h1>
                <div class="page-title">Zarządzaj swoimi danymi osobowymi</div>
            </div>

            <!-- Body -->
            <div class="account-card-body">
                <!-- Status Message -->
                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i>
                        @Model.StatusMessage
                    </div>
                }

                <!-- Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        @Html.ValidationSummary()
                    </div>
                }

                <form method="post">
                    <!-- Username (Read-only) -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user me-1"></i>
                            Nazwa użytkownika
                        </label>
                        <input type="text"
                               class="form-control"
                               value="@(User?.Identity?.Name ?? "")"
                               readonly
                               disabled
                               style="background-color: #f8f9fa;" />
                        <small class="form-text text-muted">Nazwa użytkownika nie może być zmieniona</small>
                    </div>

                    <!-- Email (Read-only for now) -->
                    <div class="form-group">
                        <label asp-for="Input.Email">
                            <i class="fas fa-envelope me-1"></i>
                            Adres e-mail
                        </label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               readonly
                               disabled
                               style="background-color: #f8f9fa;" />
                        <small class="form-text text-muted">Zmiana adresu e-mail wymaga potwierdzenia</small>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Name -->
                    <div class="form-group">
                        <label asp-for="Input.Name">
                            <i class="fas fa-user-tag me-1"></i>
                            Imię
                        </label>
                        <input asp-for="Input.Name"
                               class="form-control"
                               placeholder="Wprowadź imię"
                               autocomplete="given-name" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <!-- Surname -->
                    <div class="form-group">
                        <label asp-for="Input.Surname">
                            <i class="fas fa-user me-1"></i>
                            Nazwisko
                        </label>
                        <input asp-for="Input.Surname"
                               class="form-control"
                               placeholder="Wprowadź nazwisko"
                               autocomplete="family-name" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>

   
                    <!-- Bank Account Number -->
                    <div class="form-group">
                        <label asp-for="Input.BankAccountNumber">
                            <i class="fas fa-university me-1"></i>
                            Numer konta bankowego
                        </label>
                        <input asp-for="Input.BankAccountNumber"
                               class="form-control"
                               placeholder="PLXXXXXXXXXXXXXXXXXXXXXXXXXX lub IBAN"
                               autocomplete="off" />
                        <small class="form-text text-muted">
                            Wprowadź numer konta w formacie 26 cyfr (np. PL12345678901234567890123456) lub standardowego IBAN
                        </small>
                        <span asp-validation-for="Input.BankAccountNumber" class="text-danger"></span>
                    </div>

                    <!-- Save Button -->
                    <button type="submit" class="btn-primary-custom">
                        <i class="fas fa-save me-2"></i>
                        Zapisz zmiany
                    </button>

                    <!-- Cancel Button -->
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>
                        Anuluj
                    </a>
                </form>
            </div>

            <!-- Footer -->
            <div class="account-footer">
                <p class="text-muted">
                    <a href="/" class="account-link">
                        <i class="fas fa-arrow-left me-2"></i>
                        Powrót do strony głównej
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>